<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="Article name"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_edit_nameArticle"
        android:hint="@string/enter_article_name"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Article amount" />

    <EditText
        android:id="@+id/et_edit_amountArticle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_article_amount" />

    <Button
        android:id="@+id/button_edit_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok" />

</LinearLayout>